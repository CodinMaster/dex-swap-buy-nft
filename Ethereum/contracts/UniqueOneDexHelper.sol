    /* An ECDSA signature. */
    struct Sig {
        /* v parameter */
        uint8 v;
        /* r parameter */
        bytes32 r;
        /* s parameter */
        bytes32 s;
    }
    
    function buy(
        IERC721 token, 
        uint256 tokenId, 
        uint256 price, 
        uint256 sellerFee, 
